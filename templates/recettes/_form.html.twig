{# VÃ©rifier si la route est "recettes_edit" on affiche les images #}
{% if app.request.attributes.get('_route') == 'recettes_edit' %}
	<h2>Image</h2>
	{% for image in recette.images %}
		<div>
			<img src="{{ asset('/uploads/'~image.nom) }}" alt="Image" width="150">
			<a href="{{ path('recettes_delete_image', {'id': image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
		</div>
	{% endfor %}
{% endif %}
<button class="btn-primary">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
